<!-- res/values/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Базовая тема приложения -->
    <style name="Base.Theme.Cafe" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Основные цвета бренда -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/color1</item>
        <item name="colorPrimaryVariant">@color/color2</item>
        <item name="colorSecondary">@color/color1</item>
        <item name="colorSecondaryVariant">@color/color2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Цвет строки состояния -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Настройка темы -->
        <item name="android:windowBackground">@color/fon</item> <!-- Цвет фона для светлой темы -->
    </style>

    <style name="Theme.Cafe" parent="Base.Theme.Cafe" />
</resources>
